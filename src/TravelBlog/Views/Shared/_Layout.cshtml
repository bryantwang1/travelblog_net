<!DOCTYPE html>

<html>
<head>
    <script src="~/js/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="~/js/scripts.js" type="text/javascript"></script>
    <link href="~/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/css/styles.css"  type="text/css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Locations", "Index", "Locations")
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Experiences", "Index", "Experiences")
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("People", "Index", "People")
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Account", "Index", "Account")
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </li>
                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <p>Hello @User.Identity.Name!</p>

                           @using (Html.BeginForm("LogOff", "Account"))
                            {
                                <input type="submit" class="btn btn-default" value="Log out" />
                            }
                        }
                        else
                        {
                            <form id="login-target">
                                <input type="text" name="email" placeholder="moo@gmail.com" required />
                                <input type="password" name="password" required />
                                <input type="submit" class="btn btn-default" value="Log in" />
                            </form>
                        }
                    </li>
                    <li id="result"></li>
                </ul>
            </div>
        </nav>
        <div>

            @RenderBody()
        </div>
    </div>
</body>
</html>
